<?xml version="1.0" encoding="utf-8"?>
<component version="1.2" xmlns="http://schemas.circuit-diagram.org/circuitDiagramDocument/2012/component/xml">
	<declaration>

		<!-- Describe the component -->
		<meta name="name" value="Air Motor" />
		<meta name="version" value="1.0" />
		<meta name="minsize" value="120" />
		<meta name="author" value="Corsaka" />
		<meta name="additionalinformation" value="Pnematic component" />
		<meta name="guid" value="e90281eb-10e6-47f6-ab3b-5e5f1cffee8d" />

			<!-- Can only be displayed vertically -->
		<flags>
			<option>verticalonly</option>
		</flags>
        
		<property name="Type" type="enum" default="One" serialize="am" display="Direction">
          <option>One</option>
          <option>Two</option>
		</property>
		
		<configurations>
          <configuration name="Single Direction Air Motor" value="Type:One" />
          <configuration name="Dual Direction Air Motor" value="Type:Two" />
		</configurations>
	</declaration>
	<connections>
		
		<!-- Allow other components to connect to each of the pins -->
		<group>
		  <connection start="_Start-20x" end="_Middle-40x" edge="Start" />
          <connection start="_Middle+40x" end="_End+20x" edge="End" />
		</group>
		
	</connections>
	<render>
		<!-- Single Direction -->
		<group>
		  <line start="_Start" end="_Start+20y" />
          <line start="_Middle+40x+2y" end="_Middle+80x+2y" />
          <line start="_Middle+40x-2y" end="_Middle+80x-2y" />
          <ellipse centre="_Middle" rx="40" ry="40" />
          <line start="_Middle-39y-5x" end="_Middle-30y" />
          <line start="_Middle-39y+5x" end="_Middle-30y" />
          <line start="_End-20y" end="_End" />
		</group>
        
        <!-- Double Direction -->
        <group conditions="$Type==Two">
          <line start="_Middle+39y-5x" end="_Middle+30y" />
          <line start="_Middle+39y+5x" end="_Middle+30y" />
        </group>
      
	</render>
</component>
