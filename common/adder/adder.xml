<?xml version="1.0" encoding="utf-8"?>
<component version="1.4" xmlns="http://schemas.circuit-diagram.org/circuitDiagramDocument/2012/component/xml">
  <declaration>
    <meta name="name" value="Adder" />
    <meta name="minsize" value="150" />
    <meta name="author" value="Corsaka" />
    <meta name="guid" value="8f754035-10c6-4421-ac7f-5cbd327d4e77" />
    <flags><option>HorizontalOnly</option></flags>
    <property name="Type" type="enum" default="Full" serialize="t" display="Type">
      <option>Full</option>
      <option>Half</option>
    </property>

    <configurations>
      <configuration name="Full Adder" value="Type:Full" implements="full" />
      <configuration name="Half Adder" value="Type:Half" implements="half" />
    </configurations>
  </declaration>
  <connections>
    <group>
      <connection name="A" start="_Start+10x-30y" end="_Start+10x-60y" edge="End" />
      <connection name="B" start="_End-10x-30y" end="_End-10x-60y" edge="End" />
      <connection name="Sum" start="_Middle+30y" end="_Middle+60y" edge="End" />
      <group conditions="$Type==Full">
        <connection name="Cin" start="_Start+10x" end="_Start-20x" edge="End" />
        <connection name="Cout" start="_End-10x" end="_End+20x" edge="End" />
      </group>
      <group conditions="$Type==Half">
        <connection name="Carry" start="_End-10x" end="_End+20x" edge="End" />
      </group>
    </group>
  </connections>
  <render>
    <group>
      <!-- draw shape -->
      <path start="_Middle" data="m -15,30 l -30,0 -30,-60 60,0 15,30 15,-30 60,0 -30,60 -60,0" />
      <!-- draw connection lines -->
      <line start="_Start+20x-30y" end="_Start+20x-60y" />
      <line start="_End-20x-30y" end="_End-20x-60y" />
      <line start="_Middle+30y" end="_Middle+60y" />
      <line start="_End-20x+10y" end="_End+10x+10y" />
      <group conditions="$Type==Full">
        <line start="_Start-10x+10y" end="_Start+20x+10y" />
      </group>
      <!-- draw text -->
      <text x="_Start+20" y="_Start-20" align="CentreCentre" size="large" value="A" />
      <text x="_End-20" y="_End-20" align="CentreCentre" size="large" value="B" />
      <text x="_Middle+1" y="_Middle+20" align="CentreCentre" size="large" value="SUM" />
      <group conditions="$Type==Full">
        <text x="_Start+35" y="_Middle+4" align="CentreCentre" size="large" value="">
          <value><span>C</span><sub>in</sub></value>
        </text>
        <text x="_End-40" y="_Middle+4" align="CentreCentre" size="large" value="">
          <value><span>C</span><sub>out</sub></value>
        </text>
      </group>
      <group conditions="$Type==Half">
        <text x="_End-40" y="_Middle+4" align="CentreCentre" size="large" value="Carry" />
      </group>
    </group>
  </render>
</component>
